<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.proyectojfx.EntrenadoresController">
    <VBox spacing="10" alignment="CENTER" prefWidth="600" prefHeight="400">
        <Label text="Entrenadores del Club" />
        <TableView fx:id="tablaEntrenadores" prefHeight="300" prefWidth="580">
            <columns>
                <TableColumn fx:id="nombreColumn" text="Nombre" />
                <TableColumn fx:id="especialidadColumn" text="Especialidad" />
                <TableColumn fx:id="idColumn" text="ID" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
